<%- include('../../partials/header.ejs') %>
    <%- include('../../partials/navbar.ejs') %>

        <body>
            <div class="container">
                <hr>
                <div class="card">
                    <div class="card-header">
                        <h2>Novo Artigo</h2>
                    </div>
                    <div class="card-body">
                        <form action="/article/save" method="POST">
                            <input class="form-control" type="text" name="title" placeholder="Titulo do artigo"> <br>
                            <textarea class="form-control" placeholder="Escreva o Artigo Aqui" id="article" name="body"  cols="30" rows="10"></textarea> <br>
                            <select class="form-control" name="category" id="">
                                <% categories.forEach((category)=> { %>
                                    <option value="<%= category.id %>"> <%= category.title %></option>
                                <% }) %>
                            </select><br>
                            <button class="btn btn-success">Cadastrar</button>
                        </form>
                    </div>
                </div>
            </div>
        </body>
<%- include('../../partials/footer.ejs') %>

<script src="/tinymce/tinymce.min.js"></script>

<script>
    tinymce.init({
        selector: "#article",
        plugins: [
            'advlist autolink link image lists print preview searchreplace wordconut fullscreen insertdatetime media save table paste emoticons'
        ]
    })
</script>
